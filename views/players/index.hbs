<div class="profile-page container">
  {{>navbar}}
    {{>coverImage}}
<div class="main main-raised">
  <div class="profile-content">
    <div class="container">
      <div class="row">
        <div class="col-md-6 ml-auto mr-auto">
          <div class="profile">
            <div class="avatar">
                <img src="{{user.photo}}" alt="Circle Image" class="img-raised rounded img-fluid">
            </div>
            <div class="name">
                <h3 class="user-name">{{user.name}} {{user.surname}} <small>({{user.__type}})</small></h3>
                <i class="fa fa-futbol"></i>
                <i class="fa fa-volleyball-ball"></i>
                <i class="fa fa-basketball-ball"></i>
            </div> 
            </div> 
          </div>
        </div>
      </div>
      <div class="description text-center">
        <ul class="unstyled">
          {{#each user.sports}}
            <li>
              {{this.name}} 
              <button type="button" class="close" aria-label="Close" 
              onclick="removeSport('{{../user.username}}', '{{this._id}}', this)" >
                  <span aria-hidden="true">&times;</span>
              </button>
            </li>
          {{/each}}
        </ul>
      </div>
      <div class="row">
        <div class="col-md-12 ml-auto mr-auto">
          <div class="profile-tabs">
            <ul class="nav nav-pills nav-pills-icons justify-content-center mb-4">
              <li class="nav-item">
                  <a class="nav-link active" href="/players/{{user.username}}/request/new">
                    <i class="request-match-btn font-button-index">New request</i>
                  </a>
              </li>
              <!--<li class="nav-item">
                  <a class="nav-link" href="/players/{{user.username}}/match">
                    <i class="request-match-btn font-button-index">Match</i>
                  </a>
              </li>-->
              <li class="nav-item">
                  <a class="nav-link" href="/players/{{user.username}}/sports/new">
                    <i class="request-match-btn font-button-index">Add sports</i>
                  </a>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
	</div>
</div>
